@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewBag.Title = "All Roles";
}

<h1> All Roles</h1>
<a class="btn btn-primary" asp-action="CreateRole"> Add new role</a>

@if (Model.Any())
{

    foreach (var role in Model)
    {
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
                
                <a class = "btn btn-outline-primary" asp-action="EditRole"
                   asp-route-id = "@role.Id" class="card-link">Edit</a>

                <a class="btn btn-outline-danger" asp-action="DeleteRole"
                   asp-route-id="@role.Id" class="card-link"
                   onclick="return confirm('Are you sure you want to delete @role.Name?')">
                    Delete
                </a>
            </div>
        </div>
    }
}
else
{
    <p> No roles yet...</p>
}