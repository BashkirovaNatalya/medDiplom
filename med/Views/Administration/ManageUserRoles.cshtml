@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<med.ViewModels.UserRolesViewModel>

@{
    ViewData["Title"] = "Управление ролями";
    var userId = ViewBag.userId;
    var userType = ViewBag.UserType;
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Управление ролями</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />

                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].RoleName
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            
            <input type="submit" value="Обновить" class="btn btn-primary"
                   style="width: auto"/>
                   
            @if (userType == "Employee")
            {
            <a asp-action="EditUser" asp-route-id="@userId"
               class="btn btn-primary" style="width: auto">Назад</a>
            }
            
            @if (userType == "Client")
            {
                <a asp-action="EditClient" asp-route-id="@userId"
                   class="btn btn-primary" style="width: auto">Назад</a>
            }
            

        </div>
    </div>
</form>