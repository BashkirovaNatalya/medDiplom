@model Application

@{
    ViewData["Title"] = "Назначить";
}

<h1>Назначить</h1>

<h4>Назначить инженера</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Equipment)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Equipment.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartDatePlan)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartDatePlan)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FinishDatePlan)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FinishDatePlan)
        </dd>


        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicationStatus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ApplicationStatus.Name)
        </dd>
        <form asp-action="AssignApplication">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdApplication"/>

            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
                <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
