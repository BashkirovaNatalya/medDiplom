@model IEnumerable<med.Models.Organization>

@{
    ViewData["Title"] = "Клиенты";
}

<h1>Клиенты</h1>

<form asp-action="Index" method="get" class="float-right">
    <div class="form-actions no-color float-right">
        <p class="float-end">
            Поиск: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]"/>
            <input type="submit" value="Найти" class="btn btn-primary"/>
        </p>
    </div>
</form>
<p>
    <a asp-action="Create" class=" btn btn-primary">Добавить</a>

    <a asp-action="ExportToExcel" class=" btn btn-primary">Отчет</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WebSite)
            </th>

            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WebSite)
            </td>

            <td>
                <a asp-action="Edit" class=" btn btn-primary" asp-route-id="@item.IdOrganization">Изменить</a>
                <a asp-action="Details" class=" btn btn-primary" asp-route-id="@item.IdOrganization">Подробнее</a>
                <a asp-action="Delete" class=" btn btn-danger" asp-route-id="@item.IdOrganization">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
