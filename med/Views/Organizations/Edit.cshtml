@model med.Models.Organization

@{
    ViewData["Title"] = "Edit";
}

<h1>Изменить</h1>

<h4>Клиентская организация</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
